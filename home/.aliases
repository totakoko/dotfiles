##### Git #####

# go to git root
gcd() {
  old_rep="$(pwd)"

  until [[ -d .git ]] || [[ $(pwd) = '/' ]]; do
    cd ..
  done

  if [[ ! -d .git ]]; then
    cd "$old_rep"
    echo "Not in a git project !"
    return 2
  fi
}
